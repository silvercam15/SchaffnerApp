
<h2><%= @message.title %></h2>

<center><h5 id = "posted_by">Posted by <%= @message.user.try(:email) %> <%= time_ago_in_words(@message.created_at) %> ago</h5></center>

<div id = 'container'>
	<p>Job Number: <%= @message.job %></p>
	<p>Status: <%= @message.status %></p>
	<p><%=  @message.description %></p>



 
	<div>
<%= link_to "Back", root_path %>
<%= link_to "Edit", edit_message_path(@message) %>
<%= link_to "Delete", message_path(@message), method: :delete, data: { confirm: "Are you sure?"} %>
</div>
</div>

	<h2>Comments:</h2>
	<div id = 'comment'>
		<%= render @message.comments %>
	</div>

<h2>Reply:</h2>
	<%= render 'comments/form' %>

<div class = "image">
<img style="position: absolute; bottom:0;" src="http://r3.masstransitmag.com/files/base/MASS/image/2016/02/16x9/640x360/Logo_Schaffner_slogan2020.56ce0a5bacddd.jpg" height="100">
</div>

